---
import Container from "../components/Container.astro"
import Layout from "../layouts/Layout.astro"
import CallToAction from "../components/CallToAction.astro"
---
<Layout title="Auto B2B">

<div class="min-h-screen bg-gradient-to-b . pt-20">
  <!-- Hero Section -->
  <div class="bg-gradient-to-b . overflow-hidden">
    <Container>
      <div class="grid lg:grid-cols-2 gap-12 pt-24 pb-12 items-center">
        <div class="space-y-8">
          <div class="inline-block px-4 py-2 bg-primary/5 text-primary  rounded-full text-sm font-medium">
            Only For First 100 Customers
          </div>
          <h1 class="text-[2.7rem] leading-[2.9rem] font-bold text-gray-900">
            High-Reputation Cold Email Inboxes at <span class="text-primary bg-primary/5 px-2 rounded">Industry's Lowest Price</span>
          </h1>
          <p class="text-xl text-gray-600">
            Get direct access to high-reputation IPs with automated setup at the most competitive pricing in the market.
          </p>
          <div class="flex gap-4">
            <a href="https://calendly.com/ayushdungriyal2/intro-call" class="px-8 py-4 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors inline-flex items-center gap-2">
              Free Consultation
              <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </a>
          </div>
          
          <div class="pt-8">
            <p class="text-sm text-gray-500 mb-4">Works with popular email providers:</p>
            <div class="flex items-center gap-6">
              
              <div class=" hover:grayscale-0 transition-all hover:opacity-100">
                <img src="/public/images/outlook.webp" alt="Outlook" class="h-8" />
              </div>
              <div class="   hover:grayscale-0 transition-all  hover:opacity-100">
                <img src="/public/images/gmail.webp" alt="Google Workspace" class="h-7" />
              </div>
            </div>
          </div>
        </div>
  
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-primary/5 to-primary/10 rounded-3xl transform rotate-3"></div>
          <div class="bg-white p-8 rounded-2xl shadow-xl border border-gray-100 relative">
            <div class="absolute -top-4 right-4 bg-green-50 text-green-600 px-4 py-1 rounded-full text-sm font-medium">
              Save 60% vs Competition
            </div>
            
            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold text-gray-800">Direct Access Plan</h3>
              <div class="mt-4 flex items-center justify-center gap-2">
                <span class="text-5xl font-bold text-primary">$2</span>
                <div class="text-left">
                  <span class="text-gray-600">/inbox</span>
                  <span class="block text-sm text-gray-500">per month</span>
                </div>
              </div>
            </div>
  
            <div class="space-y-4">
              {[
                {
                  icon: <svg class="w-6 h-6 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M13 10V3L4 14h7v7l9-11h-7z" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>,
                  title: "High Reputation IPs",
                  desc: "Direct access to premium IPs"
                },
                {
                  icon: <svg class="w-6 h-6 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>,
                  title: "Automated DNS Setup",
                  desc: "Setup in minutes, not hours"
                },
                {
                  icon: <svg class="w-6 h-6 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>,
                  title: "20 Inboxes Per Panel",
                  desc: "Optimal for deliverability"
                },
                {
                  icon: <svg class="w-6 h-6 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>,
                  title: "Direct Account Access",
                  desc: "No reseller markup"
                },
              ].map(feature => (
                <div class="flex items-start gap-3 bg-gray-50 p-3 rounded-lg">
                  <span style="font-family: ;" class="text-xl emoji-font">{feature.icon}</span>
                  <div>
                    <h4 class="font-medium text-gray-900">{feature.title}</h4>
                    <p class="text-sm text-gray-600">{feature.desc}</p>
                  </div>
                </div>
              ))}
            </div>
  
            <a href="https://calendly.com/ayushdungriyal2/intro-call" class="w-full mt-8 px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors flex items-center justify-center gap-2">
              Get Started
              <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </Container>
  </div>

  <!-- Features Section -->
  <div class="py-24" id="features">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Why Choose Direct Access?</h2>
        <p class="text-gray-600 lg:w-2/3 mx-auto">
          Experience the benefits of direct infrastructure ownership with automated setup and superior deliverability.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-12">
        <!-- Instant Setup -->
        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-red-50 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M13 10V3L4 14h7v7l9-11h-7z" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold">Instant Setup</h3>
          <p class="text-gray-600">
            Automated DNS configuration, domain verification, and inbox creation in minutes, not hours.
          </p>
        </div>

        <!-- Better Deliverability -->
        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-red-50 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M22 4L12 14.01l-3-3" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold">Better Deliverability</h3>
          <p class="text-gray-600">
            High-reputation IPs ensure your emails reach the inbox. No shared or low-quality IPs.
          </p>
        </div>

        <!-- Direct Access -->
        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-red-50 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold">Direct Access</h3>
          <p class="text-gray-600">
            Own your infrastructure directly with no intermediaries or reseller markups.
          </p>
        </div>
      </div>
    </Container>
  </div>

  <!-- Comparison Section -->
  <div class="py-24" id="comparison">
    <Container>
      <h2 class="text-3xl font-bold text-center mb-16">How We Compare</h2>
      
      <div class="relative lg:max-w-4xl lg:mx-auto">
        <!-- VS Circle -->
        <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-10">
          <div class="px-4 py-2 bg-white text-primary font-bold text-lg shadow-sm rounded-lg">
            vs
          </div>
        </div>
        
        <!-- Comparison Grid -->
        <div class="grid md:grid-cols-2 gap-16 relative">
          <!-- Our Solution -->
          <div class="bg-white p-8 rounded-2xl shadow-lg border-2 border-primary">
            <div class="text-center mb-8">
              <h3 class="text-xl font-bold text-primary mb-2">Our Solution</h3>
              <div class="text-3xl font-bold">$2/inbox</div>
            </div>
            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>High-Reputation IPs</span>
              </div>
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>20 Inboxes Per Panel (Optimal)</span>
              </div>
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Direct Account Control</span>
              </div>
            </div>
          </div>

          <!-- Competitor -->
          <div class="bg-gray-50 p-8 rounded-2xl border border-gray-200">
            <div class="text-center mb-8">
              <h3 class="text-xl font-bold text-gray-700 mb-2">Competitors</h3>
              <div class="text-3xl font-bold text-gray-700">$5/inbox</div>
            </div>
            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-red-400 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-600">Low-Reputation IPs</span>
              </div>
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-red-400 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-600">100+ Inboxes Per Panel (Risky)</span>
              </div>
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-red-400 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-600">Reseller Access Only</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Decorative Line -->
        <div class="absolute left-1/2 top-0 bottom-0 w-px bg-gray-200 -translate-x-1/2 hidden md:block"></div>
      </div>
    </Container>
  </div>
  <!-- Savings Calculator -->
  <div class="py-24 " id="calculator">
    <Container>
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Calculate Your Savings</h2>
          <p class="text-gray-600">See how much you can save by switching to direct infrastructure access</p>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-8 border border-gray-100">
          <div class="space-y-8">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Number of Inboxes Needed
              </label>
              <input 
                type="number" 
                id="inboxCount"
                min="1"
                value="10"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary"
              />
            </div>

            <div class="grid md:grid-cols-3 gap-6 text-center">
              <div class="p-4 rounded-lg bg-gray-50">
                <div class="text-sm text-gray-600 mb-1">Competitor Cost</div>
                <div class="text-xl font-bold text-gray-800" id="competitorCost">$600/year</div>
              </div>
              <div class="p-4 rounded-lg bg-gray-50">
                <div class="text-sm text-gray-600 mb-1">Our Cost</div>
                <div class="text-xl font-bold text-primary" id="ourCost">$240/year</div>
              </div>
              <div class="p-4 rounded-lg bg-primary/10">
                <div class="text-sm text-primary mb-1">Your Savings</div>
                <div class="text-xl font-bold text-primary" id="savingsAmount">$360/year</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </div>

  <!-- CTA Section -->
  <div class="h-20">
  </div>
  <CallToAction/>
  <div class="h-20">
  </div>
  <div class="h-20">
  </div>

  

</div>
</Layout>

<script>
// Enhanced calculator functionality
const inboxInput = document.getElementById('inboxCount') as HTMLInputElement;
const competitorCostEl = document.getElementById('competitorCost');
const ourCostEl = document.getElementById('ourCost');
const savingsDisplay = document.getElementById('savingsAmount');

const COMPETITOR_PRICE = 5; // $5 per inbox
const OUR_PRICE = 2; // $2 per inbox

function calculateCosts() {
  const inboxes = parseInt(inboxInput.value) || 0;
  
  // Calculate yearly costs
  const competitorYearly = inboxes * COMPETITOR_PRICE * 12;
  const ourYearly = inboxes * OUR_PRICE * 12;
  const savings = competitorYearly - ourYearly;
  
  // Update display
  if (competitorCostEl) {
    competitorCostEl.textContent = `$${competitorYearly.toLocaleString()}/year`;
  }
  
  if (ourCostEl) {
    ourCostEl.textContent = `$${ourYearly.toLocaleString()}/year`;
  }
  
  if (savingsDisplay) {
    savingsDisplay.textContent = `$${savings.toLocaleString()}/year`;
  }

  // Add animation class for emphasis
  savingsDisplay?.classList.add('highlight');
  setTimeout(() => {
    savingsDisplay?.classList.remove('highlight');
  }, 200);
}

inboxInput?.addEventListener('input', calculateCosts);
document.addEventListener('DOMContentLoaded', calculateCosts);
</script>

<style>
.highlight {
  animation: pulse 0.2s ease-in-out;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

/* Enhance input spinners */
input[type="number"]::-webkit-inner-spin-button,
input[type="number"]::-webkit-outer-spin-button {
  opacity: 1;
  height: 2em;
  margin-right: 0.5em;
}

/* Additional spacing and alignment */
@media (max-width: 768px) {
  .calculator-grid {
    grid-template-columns: 1fr;
  }
}
</style>