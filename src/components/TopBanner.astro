---
// TopBar.astro
interface Props {
    quote?: string;
    author?: string;
    role?: string;
}

const {
    quote = "Autob2b saved me 20 hours a week!",
    author = "John Willie",
    role = "Agency Owner"
} = Astro.props;
---

<div class="w-full bg-gradient-to-r from-primary to-primary/90 shadow-md">
    <div class="container mx-auto py-3 px-4">
        <p class="text-center text-white flex items-center justify-center gap-2 animate-fade-in">
            <!-- Quote Icon -->
            <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="h-5 w-5 text-yellow-300 animate-pulse"
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
            >
                <path 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    stroke-width="2" 
                    d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"
                />
            </svg>
            
            <!-- Quote Text -->
            <span class="font-medium tracking-wide hover:scale-[1.02] transition-transform duration-300">
                &quot;{quote}&quot;
            </span>
            
            <!-- Author Info -->
            <span class="flex items-center gap-2">
                <span class="h-1 w-1 bg-yellow-300 rounded-full"></span>
                <span class="font-bold whitespace-nowrap">
                    {author}
                </span>
                <span class="text-yellow-300 font-medium">
                    {role}
                </span>
            </span>
        </p>
    </div>
</div>

<style>
    @keyframes fade-in {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .animate-fade-in {
        animation: fade-in 0.8s ease-out forwards;
    }

    @keyframes gentle-pulse {
        0% { opacity: 0.8; }
        50% { opacity: 1; }
        100% { opacity: 0.8; }
    }

    .animate-pulse {
        animation: gentle-pulse 2s ease-in-out infinite;
    }
</style>